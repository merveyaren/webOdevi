@model webOdevi.Models.Register
<body class="login-body">
<div class="register-container">
    <h2>Register</h2>
    <form asp-controller="register" asp-action="register" method="post" class="register-form">
        <div class="form-group">
            <label asp-for="eposta"></label>
            <input asp-for="eposta" class="form-control" />
            <span asp-validation-for="eposta" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="sifre"></label>
            <input asp-for="sifre" type="password" class="form-control" />
            <span asp-validation-for="sifre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="musteriadi"></label>
            <input asp-for="musteriadi" class="form-control" />
            <span asp-validation-for="musteriadi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="musterisoyadi"></label>
            <input asp-for="musterisoyadi" class="form-control" />
            <span asp-validation-for="musterisoyadi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="musteritelefon"></label>
            <input asp-for="musteritelefon" class="form-control" />
            <span asp-validation-for="musteritelefon" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
</body>