@model webOdevi.Models.randevular

@{
    ViewData["Title"] = "Randevu Al";
}

<form asp-controller="randevular" asp-action="randevular" method="post" class="login-body d-flex flex-column">

    <h2>Randevu Al</h2>
    <div class="form-group">
        <label for="hizmetid">Hizmet</label>
        <select asp-for="hizmetid" asp-items="ViewBag.Services" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="personelid">Personel</label>
        <select asp-for="personelid" asp-items="ViewBag.Personel" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="randevutarihi">Randevu Tarihi ve Saati</label>
        <input type="datetime-local" asp-for="randevutarihi" class="form-control" />
    </div>

    <div class="form-group">
        <label for="durum">Durum</label>
        <input type="text" asp-for="durum" class="form-control" placeholder="Bekliyor" readonly />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Randevu Al</button>
</form>
