@model webOdevi.Models.randevular

@{
    ViewData["Title"] = "Randevu Al";
}

<h2>Randevu Al</h2>
<br />
<br />
<br />
<br />
<br />

<form asp-action="randevular" method="post">
    <div class="form-group">
        <label for="hizmetid">Hizmet</label>
        <select asp-for="hizmetid" asp-items="ViewBag.Services" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="personalid">Personel</label>
        <select asp-for="personelid" asp-items="ViewBag.Personel" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="randevutarihi">Randevu Tarihi</label>
        <input type="date" asp-for="randevutarihi" class="form-control" />
    </div>

    <div class="form-group">
        <label for="baslangicsaati">Başlangıç Saati</label>
        <input type="time" asp-for="baslangicsaati" class="form-control" />
    </div>

    <div class="form-group">
        <label for="bitissaati">Bitiş Saati</label>
        <input type="time" asp-for="bitissaati" class="form-control" />
    </div>

    <div class="form-group">
        <label for="durum">Durum</label>
        <input type="text" asp-for="durum" class="form-control" placeholder="Bekliyor" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>
