@model webOdevi.Models.musteriler

<div class="login-container">
    <h2>Login</h2>
    <form asp-action="Login" method="post" class="login-form">
        <div class="form-group">
            <label asp-for="eposta"></label>
            <input asp-for="eposta" class="form-control" />
            <span asp-validation-for="eposta" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="sifre"></label>
            <input asp-for="sifre" type="password" class="form-control" />
            <span asp-validation-for="sifre" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <p>
        <a asp-controller="Home" asp-action="register" class="register-link">Hesabınız yok mu? Kayıt olun</a>
    </p>

</div>
